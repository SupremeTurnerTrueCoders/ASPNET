@model IEnumerable<Product>

    <h2>Products</h2>

    <div style="display:block">
        <a href="/Product/InsertProduct/">Create a New Product</a>
    </div>


    <table class="table">
         <tr>
             <th>ID</th>
             <th>Name</th>
             <th>Price</th>
             <th>Category ID</th>
             <th>On Sale</th>
             <th>Stock Level</th>
         </tr>

    @foreach (var product in Model)
    {
        <td><a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></td>
        <td>ID</td>
        <td>Name</td>
        <td>Price</td>
        <td>Category ID</td>
        <td>On Sale</td>
        <td>Stock Level</td>

        </tr>
    }
    </<table>
    
        
    

