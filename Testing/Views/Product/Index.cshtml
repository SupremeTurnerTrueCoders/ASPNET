@model IEnumerable<Product>

<h2>Products</h2>

<div style="display:block">
    <a href="/Product/InsertProduct/">Create a New Product</a>
</div>


<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th></th>
       
    </tr>

    @foreach (var product in Model)
    {
        <tr>
            <td><a href=/Product/ViewProduct/@product.Id>@product.Id</a></td>
           
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.ImageLocation</td>

        </tr>
    }
</table>




