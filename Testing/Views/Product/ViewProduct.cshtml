@model Product

<table class=" table">

    <tr>
        <th>ProductID</th>
        <th>Name</th>
        <th>Price</th>
        <th>ImageLocation</th>
       

    </tr>

    <tr>
        <td>@Model.Id</td>
        <td>@Model.Name</td>
        <td>@Model.Price</td>
        <td>@Model.ImageLocation</td>
>

    </tr>


</table>

<div style="display: block">
    <a href="/Product/UpdateProduct/@Model.Id">Update this Project</a>
</div>

<div style="display:block">
    @using (Html.BeginForm("DeleteProduct", "Product", "Post"))
    {
        <input type="hidden" asp-for="Id" value="@Model.Id"/>
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product"/>
    }

</div>
